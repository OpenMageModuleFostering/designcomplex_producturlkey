<config>
  <modules>
    <Designcomplex_Producturlkey>
      <version>0.1.0</version>
    </Designcomplex_Producturlkey>
  </modules>
    <global>
        <models>
            <Designcomplex_Producturlkey>
                <class>Designcomplex_Urlkey_Model</class>
            </Designcomplex_Producturlkey>
        </models>
  </global>
    <global>
        <events>
            <catalog_product_save_before>
                <observers>
                    <Designcomplex_Producturlkey>
                        <type>singleton</type>
                        <class>Designcomplex_Urlkey/observer</class>
                        <method>updateurl</method>
                    </Designcomplex_Producturlkey>
                </observers>
            </catalog_product_save_before>
        </events>
    </global>       
</config>